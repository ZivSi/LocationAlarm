<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/locationImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.6"
            android:scaleY="1.6"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameTextView"
            app:tint="@color/purple_900" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="School - Some Text :)"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@+id/locationImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/arrow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:backgroundTint="@color/white"
            android:rotationX="180"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <com.google.android.material.chip.Chip
            android:id="@+id/distanceAlertFromLocation"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="50M"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/purple_700"
            app:chipIcon="@drawable/straighten_48px"
            app:chipIconTint="@color/white"
            app:chipIconVisible="true"
            app:layout_constraintStart_toStartOf="@+id/nameTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

        <com.google.android.material.chip.Chip
            android:id="@+id/xCoordinatesChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: 33.343424"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/purple_200"
            app:layout_constraintStart_toStartOf="@+id/distanceAlertFromLocation"
            app:layout_constraintTop_toBottomOf="@+id/addressChip" />

        <com.google.android.material.chip.Chip
            android:id="@+id/yCoordinatesChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Y: 38.343424"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/purple_200"
            app:layout_constraintStart_toEndOf="@+id/xCoordinatesChip"
            app:layout_constraintTop_toTopOf="@+id/xCoordinatesChip" />


        <com.google.android.material.chip.Chip
            android:id="@+id/addressChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Israel, Some long address to test chips length"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/purple_500"
            app:chipIcon="@drawable/ic_baseline_home_24"
            app:chipIconTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/xCoordinatesChip"
            app:layout_constraintTop_toBottomOf="@+id/distanceAlertFromLocation" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Activate"
            app:backgroundTint="@color/Green"
            app:layout_constraintStart_toStartOf="@+id/xCoordinatesChip"
            app:layout_constraintTop_toBottomOf="@+id/xCoordinatesChip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Delete"
            android:textColor="@color/Red"
            app:layout_constraintStart_toEndOf="@+id/activateButton"
            app:layout_constraintTop_toTopOf="@+id/activateButton"
            app:strokeColor="@color/Red"
            app:strokeWidth="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
